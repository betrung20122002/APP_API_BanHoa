<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".GUI.QLHoaDonXuat.MainActivityThemHDX">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageView_OnBack"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edit_text"
                    android:backgroundTint="#FF5722"
                    android:padding="10dp"
                    android:src="@drawable/ic_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Thêm hóa đơn xuất"
                    android:textColor="@color/white"
                    android:textSize="30dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/editTextmhdn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Mã hóa đơn xuất"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white" />

            <EditText
                android:id="@+id/editTexttsp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Tên sản phẩm"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white" />
            <EditText
                android:id="@+id/editTextsl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Số lượng"
                android:inputType="number"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editTextdg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Đơn giá"
                android:inputType="number"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editTexttt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Tổng tiền"
                android:inputType="number"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <android.widget.Button
                android:id="@+id/btnthem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="#FF5722"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>